{
  "name": "appium-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Automation for Apps.",
  "bugs": {
    "url": "https://github.com/appium/appium/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/appium/appium.git"
  },
  "license": "Apache-2.0",
  "author": "https://github.com/appium",
  "scripts": {
    "build": "lerna exec gulp transpile",
    "clean": "lerna clean -y && rm -rf node_modules && rm -f package-lock.json && npm install",
    "coverage": "lerna exec gulp coveralls",
    "e2e-test": "lerna exec gulp e2e-test",
    "generate-docs": "lerna run generate-docs --scope appium",
    "lint": "lerna exec gulp lint",
    "lint:fix": "lerna exec lint --fix",
    "postinstall": "lerna bootstrap --no-ci",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "precommit-test": "REPORTER=dot gulp -f packages/appium/gulpfile.js once",
    "prepare": "lerna exec gulp prepublish",
    "test": "lerna exec gulp once",
    "watch": "lerna exec watch"
  },
  "pre-commit": [
    "precommit-msg",
    "precommit-test"
  ],
  "devDependencies": {
    "@appium/fake-plugin": "^1.0.0",
    "@babel/register": "^7.13.16",
    "appium-gulp-plugins": "^5.2.1",
    "chai": "4.x",
    "chai-as-promised": "7.x",
    "eslint-config-appium": "^4.0.1",
    "fancy-log": "^1.3.2",
    "gulp": "^4.0.0",
    "handlebars": "^4.2.0",
    "lerna": "^4.0.0",
    "mocha": "^8.0.1",
    "pre-commit": "1.x",
    "sinon": "^9.0.0",
    "validate.js": "^0.13.0",
    "wd": "^1.14.0",
    "webdriverio": "^6.12.0",
    "yaml-js": "^0.2.0"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  }
}
